@model BookViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<form asp-action="Details">
    <div asp-validation-summary="All"></div>

    <div>
        <label>Title</label>
        <input asp-for="Title" class="form-control" readonly />
    </div>
    <div>
        <label>Publication Year</label>
        <input asp-for="PublicationYear" class="form-control" readonly />
    </div>
    <div>
        <label>ISBN Number</label>
        <input asp-for="ISBN" class="form-control" readonly />
    </div>
    <br />
    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model.Id">Edit</a>
    <a asp-action="Index" class="btn btn-primary">Back To List</a>
</form>

