@model BookViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1> Are you sure you want Delete this Book</h1>

<form asp-action="Delete">
    <div asp-validation-summary="All"></div>

    <div>
        <label>Title</label>
        <input asp-for="Title" class="form-control" readonly />
    </div>
    <div>
        <label>Publication Year</label>
        <input asp-for="PublicationYear" class="form-control" readonly />
    </div>
    <div>
        <label>ISBN Number</label>
        <input asp-for="ISBN" class="form-control" readonly />
    </div>
    <br />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-primary">Cancle</a>
</form>