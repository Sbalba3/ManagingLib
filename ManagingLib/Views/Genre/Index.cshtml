@model IEnumerable<GenreViewModel>
@{
    ViewData["Title"] = "Index";
    var genres = new SelectList(ViewBag.Genres, "Id", "Name");
}

<h1>Index</h1>


<div>
    <a asp-action="Create" class="btn btn-primary">Add Genre</a>
</div>
<br />

<div class="card shadow mb-4 text-center">
    <div class="card-body">
        <div class="table-responsive">
            <table class="" id="myTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th class="text text-center">Name</th>
                        <th class="text text-center">Description</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td><a asp-controller="Genre" asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fas fa-eye"></i></a></td>
                            <td><a asp-controller="Genre" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"><i class="fas fa-edit"></i></a></td>
                            <td><a asp-controller="Genre" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/datatables/datatables.js"></script>
    <script src="~/lib/datatables/datatables.min.js"></script>
